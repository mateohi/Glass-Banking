<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:paddingLeft="@dimen/card_margin"
    android:paddingRight="@dimen/card_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/exchange_currency_header"
        android:text="@string/currency_header"
        android:textColor="@color/yellow"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_width="220dp"
        android:layout_height="@dimen/row_height"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/exchange_rate_buy_header"
        android:text="@string/buy_header"
        android:textColor="@color/yellow"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_toEndOf="@id/exchange_currency_header"
        android:layout_width="70dp"
        android:layout_height="@dimen/row_height" />

    <TextView
        android:id="@+id/exchange_rate_sell_header"
        android:text="@string/sell_header"
        android:textColor="@color/yellow"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_toEndOf="@id/exchange_rate_buy_header"
        android:layout_width="70dp"
        android:layout_height="@dimen/row_height" />

